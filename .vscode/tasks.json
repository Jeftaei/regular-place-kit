{
	"version": "2.0.0",
	"presentation": {
		"echo": false,
		"showReuseMessage": false,
		"clear": false
	},
	"options": {
		"cwd": "${workspaceFolder}",
		"env": {
			"ENV_FILE": "${workspaceFolder}/.env",
			"SERVER_DIRECTORY": "${workspaceFolder}/server",
			"JAR_FILE": "${workspaceFolder}/target/regular-place-kit.jar"
		}
	},
	"tasks": [
		{
			"label": "Script: Set permissions for scripts",
			"type": "shell",
			"command": "/bin/bash -c \"chmod +x ${workspaceFolder}/scripts/*.sh\" && echo Permissions set.",
			"presentation": {
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build regular-place-kit",
			"type": "java (buildArtifact)",
			"targetPath": "${workspaceFolder}/target/regular-place-kit.jar",
			"elements": [
				"${compileOutput}",
				"${dependencies}"
			],
			"group": {
				"kind": "build"
			},
			"problemMatcher": []
		},
		{
			"label": "Build and copy JAR to plugin directory",
			"dependsOn": [
				"Build regular-place-kit"
			],
			"type": "shell",
			"command": "/bin/bash",
			"args": [
				"${workspaceFolder}/scripts/copy-build.sh"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Start Paper server",
			"type": "shell",
			"command": "/bin/bash",
			"args": [
				"${workspaceFolder}/scripts/start-server.sh"
			],
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"group": {
				"kind": "test"
			},
			"problemMatcher": {
				"owner": "java",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(.*)(error|warning):(.*)$",
					"file": 1,
					"line": 2,
					"message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Starting.*$",
					"endsPattern": "^.*Done.*$"
				}
			}
		},
		{
			"label": "Build and start Paper server",
			"dependsOn": [
				"Build and copy JAR to plugin directory",
				"Start Paper server"
			],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Stop Paper server",
			"type": "shell",
			"command": "echo ${input:terminate}",
			"presentation": {
				"reveal": "silent"
			},
			"hide": true,
			"problemMatcher": []
		},
		{
			"label": "Script: Update Minecraft version",
			"hide": true,
			"type": "shell",
			"command": "/bin/bash",
			"args": [
				"${workspaceFolder}/scripts/update-version.sh"
			],
			"presentation": {
				"echo": false,
				"showReuseMessage": false
			},
			"problemMatcher": []
		},
		{
			"label": "Script: Update Minecraft patch",
			"hide": true,
			"type": "shell",
			"command": "/bin/bash",
			"args": [
				"${workspaceFolder}/scripts/update-patch.sh"
			],
			"problemMatcher": []
		},
		{
			"label": "Project: Update Paper build",
			"type": "shell",
			"command": "/bin/bash",
			"args": [
				"${workspaceFolder}/scripts/update-build.sh"
			],
			"problemMatcher": []
		},
		{
			"label": "Project: Update Minecraft version",
			"dependsOn": [
				"Script: Update Minecraft version",
				"Project: Update Paper build",
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		},
		{
			"label": "Project: Update Minecraft patch",
			"dependsOn": [
				"Script: Update Minecraft patch",
				"Project: Update Paper build",
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		},
		{
			"label": "Replace Paper server JAR with correct build",
			"type": "shell",
			"command": "/bin/bash",
			"args": [
				"${workspaceFolder}/scripts/replace-server-jar.sh"
			],
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "Start Paper server"
		}
	]
}